doctype html
html
  head
    block title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/bootstrap-3.3.6-dist/css/bootstrap.min.css')
  body
    .navbar.navbar-default.navbar-fixed-top(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') DankRecs
        .collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              if user == null
                a(href='/login') LOGIN
              else
                a(href='/logout') LOGOUT
            if user == null
              li              
                a(href='/signup') SIGN UP
            else
              li.dropdown
                a.dropdown-toggle(data-toggle="dropdown" href="") ACCOUNT <span class="caret"></span>
                ul.dropdown-menu
                  li
                    a(href='/profile') PROFILE
                  li
                    a(href='/seen') MY MOVIES
            li.dropdown
              a.dropdown-toggle(data-toggle="dropdown" href="") BROWSE <span class="caret"></span>
              ul.dropdown-menu
                li
                  a(href="/movies") MOVIES
                li
                  a(href="/actors") ACTORS
                li
                  a(href="/directors") DIRECTORS
                li
                  a(href="/studios") STUDIOS
            if user != null && user.isadmin == true
              li
                a(href='/admin') ADMIN
          #searchForm.col-sm-6.col-md-6.pull-right
            form.nav-form(role="search" action="/search" method="post")
              #searchBar.input-group
                input.form-control(type="text" placeholder="Search our dank database" name="searchterm")
                .input-group-btn
                  button.btn.btn-default(type="submit")
                    i.glyphicon.glyphicon-search
    block content
        
block scripts
  script(src='/scripts/jquery-2.1.3.min.js')
  script(src='/bootstrap-3.3.6-dist/js/bootstrap.min.js')

