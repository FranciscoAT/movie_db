doctype html
html
  head
    block title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/bootstrap-3.3.6-dist/css/bootstrap.min.css')
    link(rel = "stylesheet" type="text/css" href="bootstrap-star-rating/css/star-rating.css")
  body
    .navbar.navbar-default.navbar-fixed-top(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') DankRecs
        .collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href='/login') LOGIN
            li
              a(href='/signup') SIGN UP
            li.dropdown
              a.dropdown-toggle(data-toggle="dropdown" href="") BROWSE <span class="caret"></span>
              ul.dropdown-menu
                li
                  a(href="/movies") MOVIES
                li
                  a(href="/actors") ACTORS
                li
                  a(href="/directors") DIRECTORS
                li
                  a(href="/studios") STUDIOS
          #searchForm.col-sm-6.col-md-6.pull-right
            form.nav-form(role="search" action="/search" method="post")
              #searchType.input-group
                select.form-control(name="searhType")
                  option Movies
                  option Actors
                  option Directors
                  option Studios
              #searchBar.input-group
                input.form-control(type="text" placeholder="Search our dank database" name="searchterm")
                .input-group-btn
                  button.btn.btn-default(type="submit")
                    i.glyphicon.glyphicon-search
    block content
        
      
  script(src='/scripts/jquery-2.1.3.min.js')
  script(src='/bootstrap-3.3.6-dist/js/bootstrap.min.js')
  script(src="bootstrap-star-rating/js/star-rating.js")
  script
    $(".rating").rating();

